<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvBorrowerName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nama Peminjam"
                android:textStyle="bold"
                android:textSize="16sp" />
            <androidx.cardview.widget.CardView
                android:id="@+id/lyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <TextView
                        android:id="@+id/tvState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dipinjam"
                        android:textColor="@color/accent_good"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvBorrowAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dipinjam: -" />

        <TextView
            android:id="@+id/tvEstimatedReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimasi Kembali: -" />

        <TextView
            android:id="@+id/tvReturnedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dikembalikan: -" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
